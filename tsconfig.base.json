{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@autorepost/domain": ["packages/domain/src/index.ts"],
      "@autorepost/domain/*": ["packages/domain/src/*"],
      "@autorepost/integrations-tiktok": ["packages/integrations-tiktok/src/index.ts"],
      "@autorepost/integrations-tiktok/*": ["packages/integrations-tiktok/src/*"],
      "@autorepost/common": ["packages/common/src/index.ts"],
      "@autorepost/common/*": ["packages/common/src/*"]
    }
  }
}
