{
  "name": "autorepost-dash",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@11.5.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:services": "turbo run dev --filter=@autorepost/api --filter=@autorepost/worker --parallel",
    "build": "turbo build",
    "build:render": "turbo build --filter=@autorepost/api --filter=@autorepost/worker --filter=@autorepost/web && node scripts/copy-web-build.js",
    "lint": "turbo lint",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "smoke:test": "node tests/smoke/run-smoke.js",
    "render:start": "node scripts/start-render.js",
    "setup:supabase": "ts-node scripts/setup-supabase.ts",
    "generate:token-key": "ts-node scripts/generate-token-key.ts",
    "verify:setup": "ts-node scripts/verify-setup.ts",
    "db:migrate": "npx prisma migrate deploy --schema=./prisma/schema.prisma",
    "db:seed": "npx prisma db seed --schema=./prisma/schema.prisma",
    "db:studio": "npx prisma studio --schema=./prisma/schema.prisma",
    "db:generate": "npx prisma generate --schema=./prisma/schema.prisma"
  },
  "devDependencies": {
    "@prisma/client": "^5.17.0",
    "@types/express": "^4.17.21",
    "@types/node": "^24.9.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.6.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "prisma": "^5.17.0",
    "ts-node": "^10.9.2",
    "turbo": "^2.1.1",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
